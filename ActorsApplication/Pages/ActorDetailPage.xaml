<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActorsApplication.Pages.ActorDetailPage"
             Title="{Binding LastName}">
    <VerticalStackLayout x:Name="ActorDetailStack">
        <Image WidthRequest="150" Source="{Binding ProfilePicture}"/>
        <Label HorizontalOptions="Center" FontSize="30" Text="{Binding LastName}"/>
        <Label HorizontalOptions="Center" Text="{Binding FirstName}"/>
        <Label HorizontalOptions="Center" Margin="10" Text="{Binding BirthYear}"/>
        <Label HorizontalOptions="Start" Margin="10" Text="{Binding ShortBio}"/>

        <Button Text="Change Actor Details" Clicked="DemoChange"></Button>
    </VerticalStackLayout>
    
</ContentPage>