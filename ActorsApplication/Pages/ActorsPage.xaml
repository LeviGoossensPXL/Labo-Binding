<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:p="clr-namespace:ActorsApplication.Pages"
             x:Class="ActorsApplication.Pages.ActorsPage"
             xmlns:data="clr-namespace:ActorsApplication.Data"
             Title="ActorsPage"
             Shell.NavBarIsVisible="False"
             x:DataType="p:ActorsPage">

    <ScrollView>
        <StackLayout>
            <Label Text="Actors of the day" 
                Margin="8,8,8,0" 
                FontSize="Medium" 
                TextColor="Crimson" 
                FontAttributes="Bold"/>
            <CollectionView ItemsSource="{Binding Actors}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="4"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="data:Actor">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="Red"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border>
                            <Grid Margin="6" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Image Source="{Binding ProfilePicture}"
                                       VerticalOptions="Start"
                                       HorizontalOptions="Start"
                                       Aspect="AspectFill"
                                       WidthRequest="100"
                                       Margin="8"
                                       HeightRequest="150" />

                                <StackLayout WidthRequest="200"
                                             Margin="8"
                                             VerticalOptions="Start"
                                             Grid.Column="1"
                                             Orientation="Vertical">

                                    <Label VerticalOptions="Center"
                                           Text="{Binding FirstName}"
                                           FontAttributes="Bold" />

                                    <Label Text="{Binding ShortBio}"
                                           MaxLines="4"
                                           VerticalOptions="Start"
                                           FontAttributes="Italic" />
                                </StackLayout>

                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!--<Button Text="Add Actor" Clicked="AddActorClicked"></Button>-->
        </StackLayout>
    </ScrollView>
</ContentPage>
    
